{
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": "./",
    "paths": {
      "$src/*": ["src/*"],
      "@/*": ["src/*"],
    },
    "skipLibCheck": true,
    "noEmit": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "lib": ["ESNext", "dom"],
    "rootDir": "src",
    "module": "esnext",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "allowJs": true
  },
  "include": ["./src/**/*", "./custom.d.ts"],
  "exclude": ["node_modules"]
}
